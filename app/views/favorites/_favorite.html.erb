<% if book.favorited_by?(current_user) %>
  <%= link_to book_favorites_path(book), method: :delete, remote: true do, class: "favorite_btn" do %>
  ♥<%= book.favorites.count %> いいねを外す
  <% end %>
 <% else %>
  <%= link_to book_favorites_path(book), method: :post, remote: true do, class: "favorite_btn" do %>
  ♡<%= book.favorites.count %> いいね
  <% end %>
<% end %>